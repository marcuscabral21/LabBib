@model IEnumerable<LabBib.Models.Books>

<h2>Livros:</h2>

<a asp-action="Librarian" class="btn btn-back mb-3">Voltar</a>
<a asp-action="AdicionarOuEditarLivros" class="btn btn-success mb-3">Inserir um novo Livro</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>ISBN</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id_Livros</td>
                    <td>@book.ISBN_Livros</td>
                    <td>@book.Titulo_Livros</td>
                    <td>@book.Autor_Livros</td>
                    <td>
                        <a asp-action="AdicionarOuEditarLivros" asp-route-id="@livro.Id_Livros" class="btn btn-primary">Editar</a>
                        <form asp-action="ApagarLivro" asp-route-id="@livro.Id_Livros" method="post" style="display:inline;" onsubmit="return confirm('Confirma a exclusão deste livro?');">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Nenhum livro foi encontrado.</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: 'Archivo Black', sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: black;
        margin-top: 20px;
    }

    .btn {
        padding: 8px 12px;
        border-radius: 10px;
        text-decoration: none;
        font-size: 14px;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .table {
        width: 90%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 18px 20px;
            text-align: left;
            border-bottom: 1px solid black;
        }

        .table thead {
            background-color: #f8f9fa;
            color: black;
        }

        .table tr {
            background-color: #fff;
        }

        .table td {
            vertical-align: middle;
        }

            .table td a {
                margin-right: 10px;
            }

        .table .text-center {
            text-align: center;
        }

    .mb-3 {
        margin-bottom: 15px;
    }

    .table .btn {
        padding: 6px 10px;
        font-size: 12px;
        border-radius: 8px;
    }

    .btn-back {
        margin-left: 65px;
    }
</style>